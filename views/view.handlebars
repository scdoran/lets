        <![endif]-->
    </head>
<body style="background-image: none; background-color: white;">
<nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a href="#"><img class="logo" src="/assets/images/new-lets-logo.png" alt="lets social app">
            </a>
           
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="view.html">Home</a></li>
                <li><a href="view.html">Find</a></li>
                <li><a href="#portfolio">Profile</a></li>
                <li><a href="#">Friends</a></li>
                <li><a href="#">Logout</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container content">
    <div class="row">
        <div class="col-s-2">
            <!-- Filter buttons -->
            <div class="btn-group filterButtons">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filter <span class="caret"></span>
            </button>
                <ul class="dropdown-menu">
                    <li><a href="#">Your Friends</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Hiking</a></li>
                    <li><a href="#">Food</a></li>
                    <li><a href="#">Movies</a></li>
                    <li><a href="#">Gaming</a></li>
                    <li><a href="#">Dating</a></li>
                    <li><a href="#">Nightlife</a></li>
                    <li><a href="#">Sports</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Show All</a></li>
                </ul>
            </div>
            <div class="btn-group filterButtons">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Distance <span class="caret"></span>
            </button>
                <ul class="dropdown-menu">
                    <li><a href="#">1 Mile</a></li>
                    <li><a href="#">5 Miles</a></li>
                    <li><a href="#">20 Miles</a></li>
                    <li><a href="#">50 Miles</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Reset</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row friendResults">
        <div class="col-md-6 col-xs-12">
            <div class="item">
                <img class ="avatar" src="/assets/images/avatar.jpeg">
                <h3>Nathan</h3>
                    <p class="status">Looking to play basketball.</p>
                    <button type="button" class="btn btn-primary view">View Profile</button>
                    <div class="socialLinks">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                            <a href="tel:+1-330-569-4131"><span class="glyphicon glyphicon-phone glyphicon-align-left" aria-hidden="true"></span></a>
                    </div>
            </div>
        </div>
        {{#each user}}
        <div class="col-md-6 col-xs-12">
            <div class="item">
                <img class ="avatar" src="{{this.photo}}">
                <h3>{{this.name}}</h3>
                <p class="status">{{this.status}}</p>
                <button type="button" class="btn btn-primary view">View Profile</button>
                <div class="socialLinks">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <a href="{{this.phone}}"><span class="glyphicon glyphicon-phone glyphicon-align-left" aria-hidden="true"></span></a>
                </div>
            </div>
        </div>
        {{/each}}
        
    </div>
        <a href="#top"><button type="button" class="btn btn-default">Back to Top</button></a>

</div>
<footer id = "footer" class="footer navbar-fixed-bottom">
      <div class="container">
          <h2 id="available">Available:</h2>
            <!-- Rounded switch -->
            <label class="switch">
                <input id="availableCheckbox" type="checkbox" checked>
                <div class="slider round"></div>
            </label>

            <button type="button" class="btn btn-md btn-primary" id="updateLocation">Update Location</button>
      </div>
</footer>
        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>       
        <!-- Bootstrap JavaScript -->
        <script src="https://netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        <script src="/assets/js/view.js"></script>
</body>
</html>
